                <label for="extrapayment" class="form-label fw-bold">ค่าใช้จ่ายเพิ่มเติม</label>
                <input type="number" class="form-control" id="extrapayment" name="extrapayment" value="0">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-lg-6 col-sm-12">
                <label for="description" class="form-label fw-bold">รายละเอียด</label>
                <input type="text" class="form-control mb-2" id="description" name="description">
            </div>
            <div class="col-lg-6 col-sm-12 mb-3">
                <div class="col-12 text-nowrap">
                    <p class="fw-bold mt-1 mb-2">เปลี่ยนสถานะ</p>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="fixStatus" id="inlineRadio1" value="แจ้งเรื่อง">
                        <label class="form-check-label" for="inlineRadio1">แจ้งเรื่อง</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="fixStatus" id="inlineRadio2" value="กำลังดำเนินการ" required>
                        <label class="form-check-label" for="inlineRadio2">กำลังดำเนินการ</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="fixStatus" id="inlineRadio3" value="เสร็จสิ้น">
                        <label class="form-check-label" for="inlineRadio3">เสร็จสิ้น</label>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success form-control py-3">ยืนยันการเปลี่ยนสถานะ</button>
    </form>
</div>